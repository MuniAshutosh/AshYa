{
  "scripts": {
    "jsCopy": "mkdir docs\\js && copy .\\js\\* .\\docs\\js\\",
    "cssCopy": "mkdir docs\\css && copy .\\css\\* .\\docs\\css\\",
    "inlineStyle": "inline-script-tags index.html docs/index.html",
    "inlineScripts": "inline-stylesheets docs/index.html .",
    "cleanUp": "rmdir /s /q docs\\js && rmdir /s /q docs\\css",
    "build": "npm run jsCopy && npm run cssCopy && npm run inlineStyle && npm run inlineScripts && npm run cleanUp"
  },
  "devDependencies": {
    "inline-scripts": "^1.7.4"
  }
}